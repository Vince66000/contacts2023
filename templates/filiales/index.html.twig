{% extends 'base.html.twig' %}

{% block title %}Filiales index{% endblock %}

{% block body %}
    <div class="container-fluid p-5">
        <h1 class="text-center">Liste des filiales</h1>

        <a  class="btn bg-success-subtle" href="{{ path('app_filiales_new') }}">Nouvelle filiale</a>
        <table class="table table-striped mt-3 text-center">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Code Avensys</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for filiale in filiales %}
                <tr>
                    <td>{{ filiale.Nom }}</td>
                    <td>{{ filiale.iDAvensys }}</td>
                    <td>
                        <a class="btn bg-warning-subtle"  href="{{ path('app_filiales_show', {'id': filiale.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn bg-success-subtle" href="{{ path('app_filiales_new') }}">Nouvelle filiale</a>
    </div>

{% endblock %}
